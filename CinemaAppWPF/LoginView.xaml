<UserControl x:Class="CinemaAppWPF.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="E-mail"/>
            <TextBox Margin="0,5"/>
            <TextBlock Text="Hasło"/>
            <PasswordBox Margin="0,5"/>
            <Button Content="Zaloguj" Margin="0,10"/>
            <Button Content="Rejestruj się" />
        </StackPanel>
    </Grid>
</UserControl>
