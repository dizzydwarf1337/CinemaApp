<UserControl x:Class="CinemaAppWPF.Views.MoviesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Filmy" FontWeight="Bold" FontSize="16"/>
            <DataGrid AutoGenerateColumns="False" Height="300" Margin="0,10,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tytuł" Binding="{Binding Title}"/>
                    <DataGridTextColumn Header="Gatunek" Binding="{Binding Genre}"/>
                    <DataGridTextColumn Header="Reżyser" Binding="{Binding Director}"/>
                    <DataGridTextColumn Header="Czas trwania" Binding="{Binding Duration}"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal">
                <Button Content="Dodaj"/>
                <Button Content="Edytuj" Margin="10,0,0,0"/>
                <Button Content="Usuń" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
